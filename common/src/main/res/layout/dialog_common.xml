<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_common_dlg_coner"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/common_title_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/tx_black"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/lin_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_delet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/dialog_close" />
            </LinearLayout>
        </RelativeLayout>

        <View
            style="@style/LineViewStyle"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp13" />


        <TextView
            android:id="@+id/common_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp11"
            android:text="最新版本：1.1.3\n更新内容\n在想更新测试"
            android:textColor="@color/tx_black"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/lin_twoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/common_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="@dimen/sp17" />

            <Button
                android:id="@+id/common_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp11"
                android:layout_weight="1"
                android:text="确认"
                android:textSize="@dimen/sp17" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>