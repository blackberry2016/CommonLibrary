<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="settle_detail_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dp10</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="settle_detail_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>
    <style name="settle_detail_left_style" parent="settle_detail_item_style">
        <item name="android:textColor">#86939E</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="settle_detail_right_style" parent="settle_detail_item_style">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
    </style>

</resources>
